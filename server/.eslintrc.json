{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard",
        "plugin:prettier/recommended",
        "plugin:jest/recommended",
		"plugin:jest/style"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier",
        "jest"
    ],
    "rules": {
        "prettier/prettier":[
            "error",
            {
                "singleQuote": true,
                "semi": true,
                "trailingComma": "all",
                "arrowParens": "avoid"
            }
        ]
    }
}
